= simple_form_for(@poll, remote: true, defaults: {label: false}, 
                         html: {novalidate: 'novalidate', autocomplete: "off" }) do |form|
  = form.error_notification
  = form.input :question, placeholder: "Write your question here"
  = form.input :answers, as: :array
  = form.button :submit, "Create poll"
